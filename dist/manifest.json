
{
  "name": "dnoad",
  "short_name": "dnoad",
  "description": "Ad removal extension for 多瑙影院(www.dnvod.tv)",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [],
  "browser_action": {
    "default_title": "dnoad"
  },
  "icons" : {
    "16" : "icon-16.png",
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [{
    "css": [],
    "js": [
      "jquery-3.2.1.min.js",
      "content.js"
    ],
    "matches": [
      "http://www.dnvod.tv/*",
      "https://www.dnvod.tv/*",
      "https://www.ifun.tv/*"
    ]
  }]
}